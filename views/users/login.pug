html 
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="/css/style.css")
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')

    nav.navbar.navbar-icon-top.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='/') ED-Store
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/')
              i.fa.fa-home
              |           Home
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/products')
              i.fa.fa-envelope-o
                span.badge.bg-danger #{allProducts}
              |           Buy

          li.nav-item
            a.nav-link(href='/users/profile')
              i.fa.fa-globe
              | Profile
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type='text' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
      hr


            

    section.vh-100(style='background-color: #eee;')
      .container.h-100
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-lg-12.col-xl-11
            .card.text-black(style='border-radius: 25px;')
              .card-body.p-md-5
                .row.justify-content-center
                  .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1
                    p.text-center.h1.fw-bold.mb-5.mx-1.mx-md-4.mt-4 Log In
                    form.mx-1.mx-md-4(action="/users/login", method="post")
                      .d-flex.flex-row.align-items-center.mb-4
                        i.fas.fa-envelope.fa-lg.me-3.fa-fw
                        .form-outline.flex-fill.mb-0
                          input#form3Example3c.form-control(type='email' name="email")
                          label.form-label(for='email' ) Your Email
                          
                          
                      .d-flex.flex-row.align-items-center.mb-4
                        i.fas.fa-lock.fa-lg.me-3.fa-fw
                        .form-outline.flex-fill.mb-0
                          input#form3Example4c.form-control(type='password' name="password")
                          label.form-label(for='password' ) Password
                          br
                          each msg,i in message 

                            h(id="wrong")= msg[i]
                      .form-check.d-flex.justify-content-center.mb-5
                        input#form2Example3c.form-check-input.me-2(type='checkbox' value='')
                        label.form-check-label(for='form2Example3')
                          | I agree all statements in 
                          a(href='#!') Terms of service
                      .form-check.d-flex.justify-content-center.mb-5
                        a(href="/users/register")  Don't have an account? Register here
                      .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
                        button.btn.btn-primary.btn-lg(type='submit' class="btn btn-primary") Login
                  .col-md-10.col-lg-6.col-xl-7.d-flex.align-items-center.order-1.order-lg-2
                    img.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp' alt='Sample image')


