doctype html
head
meta(charset='UTF-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge')
meta(name='viewport' content='width=device-width, initial-scale=1.0')
link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet')
link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
link(rel="stylesheet", href="/css/style.css")


nav.navbar.navbar-icon-top.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='/') ED-Store
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/')
              i.fa.fa-home(style="color:lime")
              | Home

          li.nav-item
            a.nav-link(href='/users/profile')
              i.fa.fa-globe(style="color:lime")
              | Profile

.container(style="text-align:center") 
    h3 Welcome #{user.username}

.container(style="text-align:center") 
    h1(style="color:lime") All admin accounts
    hr
.center(style="border-radius:20px;" class="center")
  each admin in allAdmins
    .container(style=" width:20%; background-color:rgb(228, 226, 226); border-radius:20px; justify-content:center")
      section.mx-auto.my-5(style='max-width: 23rem;')
       .card-body.closed.px-0
            .button.px-2.mt-3
              a.btn.btn-floating.btn-lg.living-coral.text-white.float-end(style='margin-right: .75rem;')
                i.fas.fa-unlock
            .bg-white.px-4.pb-4.pt-3-5
              h5.card-title.h5.living-coral-text Name : #{admin.username}
              .d-flex.justify-content-between.living-coral-text
                h6.card-subtitle.font-weight-light Role : Admin
              hr
              .d-flex.justify-content-between.pt-2.mt-1.text-center.text-uppercase.living-coral-text
                div
                  i.fas.fa-phone.fa-lg.mb-3
                  p.mb-0 #{admin.phone}

                div
                  i.far.fa-grin-beam-sweat.fa-lg.mb-3
                  p.mb-0 Smile
              hr
              table.table.table-borderless
                tbody
                  tr.mt-2
                    th.px-0.pb-3.pt-2(scope='row')
                      i.fas.fa-map
                    td.pb-3.pt-2 City : #{admin.city}
                  tr
                    th.px-0.pb-3.pt-2(scope='row')
                      i.fas.fa-map-marker-alt.living-coral-text
                    td.pb-3.pt-2 Address : #{admin.address}
                  tr
                    th.px-0.pb-3.pt-2(scope='row')
                      i.fas.fa-envelope
                    td.pb-3.pt-2
                      a(href="mailto:"+admin.email class="mailto-admin")  Email : #{admin.email}

                  //- tr.mt-2
                  //-   th.px-0.pb-3.pt-2(scope='row')
                  //-     i.far.fa-clock.living-coral-text
                  //-   td.pb-3.pt-2
                  //-     span.deep-purple-text.me-2  Shift : 
                  //-     |  09:00 - 17:00

                br
                br
      form(action="/users/ceo/change-user-role/"+admin._id, method="post") 
        label(for="") Change role*
        select(name="changeRole" style="width:100%; text-align:center" class="form-control")
            
            option(value="admin") Admin  
            option(value="user") User
        br
        br
        button(type="submit" class="btn btn-primary" style="width:100%" class="form-control")  Apply
      br


    script.
      const card = document.querySelector('.map-card');
      const cardBody = card.querySelector('.card-body')
      card.addEventListener('click', () => {
      cardBody.classList.toggle('closed')
      })
    