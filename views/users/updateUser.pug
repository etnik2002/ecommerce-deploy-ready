    .container
      h1 Update your profile
        .form-wrapper.create 
            form(action="/users/update/"+user._id, method="post" class="form-group") 
                br
                .form-elem(style="font-size:16px")
                    label(for="username") Username*
                    input(type="text" name="username" value=user.username required class="form-control")
                br
                .form-elem(style="font-size:16px")
                    label(for="phone") Phone*
                    input(type="number" name="phone" value=user.phone required class="form-control")
                br
                .form-elem(style="font-size:16px")
                    label(for="email") Email*
                    input(type="text" name="email" value=user.email required class="form-control")
                br
                button(type="submit" class="btn btn-info") Submit
